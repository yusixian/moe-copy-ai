{
  "name": "moe-copy-ai",
  "displayName": "Moe Copy AI",
  "version": "0.2.0",
  "description": "✨ 萌萌哒的 AI 网页数据提取助手 ✨",
  "author": "cos <i@cosine.ren>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:file": "jest --testMatch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:fix:unssafe": "biome check --write --unsafe",
    "format": "biome format --write ."
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec biome check --staged --write --no-errors-on-unmatched"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.5",
    "@iconify/react": "^5.2.0",
    "@mozilla/readability": "^0.6.0",
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "@xsai/generate-text": "0.2.0-beta.3",
    "@xsai/model": "0.2.0-beta.3",
    "@xsai/stream-text": "0.2.0-beta.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "foxact": "^0.2.49",
    "gpt-tokenizer": "^2.9.0",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0",
    "motion": "^12.4.7",
    "pino": "^9.6.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "18.2.0",
    "react-responsive": "^10.0.0",
    "react-toastify": "^11.0.5",
    "rehype-parse": "^8.0.5",
    "rehype-remark": "^9.1.2",
    "remark-gfm": "^3.0.1",
    "remark-stringify": "^10.0.3",
    "tailwind-merge": "^3.0.2",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@testing-library/dom": "^10.4.0",
    "@types/chrome": "0.0.258",
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.3.2",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "sidePanel",
      "scripting",
      "tabs",
      "activeTab"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }
}
