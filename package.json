{
  "name": "moe-copy-ai",
  "displayName": "Moe Copy AI",
  "version": "0.3.2",
  "description": "✨ 萌萌哒的 AI 网页数据提取助手 ✨",
  "author": "cos <i@cosine.ren>",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3 && node scripts/post-build-firefox.js",
    "package": "pnpm build && plasmo package",
    "package:firefox": "pnpm build:firefox && plasmo package --target=firefox-mv3",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:fix:unssafe": "biome check --write --unsafe",
    "format": "biome format --write .",
    "prepare": "npx simple-git-hooks",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec biome check --staged --write --no-errors-on-unmatched"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.5",
    "@iconify/react": "^5.2.0",
    "@mozilla/readability": "^0.6.0",
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "@xsai/generate-text": "0.2.0-beta.3",
    "@xsai/model": "0.2.0-beta.3",
    "@xsai/stream-text": "0.2.0-beta.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "foxact": "^0.2.49",
    "gpt-tokenizer": "^2.9.0",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0",
    "motion": "^12.4.7",
    "pino": "^9.6.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "18.2.0",
    "react-error-boundary": "^6.1.0",
    "react-responsive": "^10.0.0",
    "react-toastify": "^11.0.5",
    "rehype-parse": "^8.0.5",
    "rehype-remark": "^9.1.2",
    "remark-gfm": "^3.0.1",
    "remark-stringify": "^10.0.3",
    "tailwind-merge": "^3.0.2",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/chrome": "0.0.258",
    "@types/dompurify": "^3.2.0",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "vitest-browser-react": "^2.0.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "sidePanel",
      "scripting",
      "tabs",
      "activeTab"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  },
  "pnpm": {
    "overrides": {
      "msgpackr@<1.10.1": ">=1.10.1",
      "svelte@<4.2.19": ">=4.2.19",
      "esbuild@<=0.24.2": ">=0.25.0",
      "@babel/runtime@<7.26.10": ">=7.26.10",
      "base-x@<=3.0.10": ">=3.0.11",
      "brace-expansion@>=1.0.0 <=1.1.11": ">=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2",
      "content-security-policy-parser@<0.6.0": ">=0.6.0",
      "tmp@<=0.2.3": ">=0.2.4",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "nanoid@>=4.0.0 <5.0.9": ">=5.0.9",
      "js-yaml@<3.14.2": ">=3.14.2",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0"
    }
  }
}
